@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Add Book";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add Book</title>
</head>
<body>
    <h1>Add Book</h1>
    <hr />
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            Error: @TempData["Error"]
        </div>
    }
    <div class="centered-container">
        <div class="custom-box">
            <div class="form-group">
                <form asp-controller="Book" asp-action="AddBook" method="post">
                    <div class="mb-3">
                        <input type="hidden" name="isISBN" value="true"/>
                        <label class="form-label" for="identifier">Book ISBN</label>
                        <input class="form-control" type="text" id="identifier" name="identifier" required/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success w-100 p-2"><i class="bi bi-plus-lg"></i> Add Book</button>
                    </div>
                </form>
            </div>
            <div class="form-group">
                <form asp-controller="Book" asp-action="SearchResults">
                    <div class="mb-3">
                        <label class="form-label" for="title">Book Title</label>
                        <input class="form-control" type="text" id="title" name="title" required/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success w-100 p-2"><i class="bi bi-plus-lg"></i> Add Book</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
