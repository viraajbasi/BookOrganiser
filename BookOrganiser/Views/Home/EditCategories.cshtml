@using System.Globalization
@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Manage Categories";
    var textInfo = new CultureInfo("en-GB", false).TextInfo;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Manage Categories</title>
</head>
<body>
    <h1>Category Management</h1>
    <hr/>
    <div class="centered-container">
        <div class="custom-box">
            <div class="form-group mb-3">
                <form asp-controller="Home" asp-action="AddCategory" method="post">
                    <div class="mb-3">
                        <label class="form-label" for="category">Custom Category:</label>
                        <input class="form-control" type="text" id="category" name="category" required/>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success"><i class="bi bi-plus-lg"></i> Add Category</button>
                    </div>
                </form>
            </div>
            <div class="form-group mb-3">
                <form asp-controller="Home" asp-action="DeleteCategory" method="post">
                    <div class="mb-3">
                        <select for="category" name="category" class="form-select" required>
                            <option value="" disabled selected hidden>Please Choose...</option>
                            @foreach (var item in (List<string>)ViewBag.Categories)
                            {
                                <option value="@item">@textInfo.ToTitleCase(item)</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-dash-lg"></i> Delete Category</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>