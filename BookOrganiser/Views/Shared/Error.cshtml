@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">An Error Has Occurred</h1>
<h2 class="text-danger">@Model.ErrorMessage</h2>
<p>
    Please try again in a few minutes, or contact us if this error persists.
</p>
@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
<form asp-controller="Home" asp-action="Index" method="get">
    <button type="submit" class="btn btn-success">Return Home</button>
</form>