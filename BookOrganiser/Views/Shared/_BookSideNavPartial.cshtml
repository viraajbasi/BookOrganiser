@model (int BookId, int SummaryId)

<div class="sidebar">
    <ul class="nav flex-column">
        <li class="nav-item">
            <div class="mb-3">
                <form asp-controller="Home" asp-action="Index" method="get">
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-house-door"></i> Return Home</button>
                </form>
            </div>
        </li>
        <li class="nav-item">
            <div class="mb-3">
                <form asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId" method="get">
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-book"></i> Book Details</button>
                </form>
            </div>
        </li>
        <li class="nav-item">
            <div class="mb-3">
                <form asp-controller="AISummary" asp-action="Summary" asp-route-id="@Model.SummaryId" method="get">
                    <button type="submit" class="btn btn-outline-success"><i class="bi bi-stars"></i> AI Summary</button>
                </form>
            </div>
        </li>
    </ul>
</div>